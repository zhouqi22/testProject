.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {
  position: fixed;
  width: 375rpx;  
  left:187rpx;
  padding:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 40rpx;
  bottom:500rpx;
  background: rgba(89, 89, 89, 1);  
  border-radius: 10rpx; 
  z-index: 1000; 
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
  line-height: 40rpx;
}  
.toast_content_text {  

  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
  line-height: 40rpx;
} 